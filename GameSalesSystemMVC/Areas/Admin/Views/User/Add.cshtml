@{
    ViewBag.Title = "Add";
}

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">User Information</h1>
                            </div>
                            <form class="user">
                                <div class="form-group row">
                                    <input type="text" class="form-control form-control-user" id="NameSurname"
                                           placeholder="Name Surname">
                                </div>
                                <div class="form-group row">
                                    <input type="email" class="form-control form-control-user" id="Email"
                                           placeholder="Email Address">
                                </div>
                                <div class="form-group row">
                                    <input type="text" class="form-control form-control-user" id="Username"
                                           placeholder="Username">
                                </div>
                                <div class="form-group row">
                                    <input type="password" class="form-control form-control-user"
                                           id="Password" placeholder="Password">
                                </div>
                                <div class="form-group row">
                                    <input type="text" class="form-control form-control-user" id="Country"
                                           placeholder="Country">
                                </div>
                                <div class="form-group row">
                                    <input type="date" class="form-control form-control-user" id="DateOfBirth"
                                           placeholder="Date Of Birth">
                                </div>
                                <button onclick="AddUser()" class="btn btn-primary btn-user btn-block">
                                    Add
                                </button>


                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>



</body>
@section scripts
{
    <script>
        function AddUser()
        {
            var userDto =
            {
                NameSurname: $('#NameSurname').val(),
                Email: $('#Email').val() ,
                Username: $('#Username').val() ,
                Password: $('#Password').val() ,
                Country: $('#Country').val(),
                DateOfBirth: $('#DateOfBirth').val()
            };

            ajaxSendDataWithLoadingGetData(userDto, '/Admin/User/InsertUser', $('body'), function (response) {
                if (response.isSuccess) {
                    SuccessMessage("Success", response.Message, function () {
                        PageRedirect("/Admin/User/Index");
                    });
                }
                else {
                    ErrorMessage("Unsuccess", response.Message, function () {

                    });
                }
            });

        }

    </script>
}

