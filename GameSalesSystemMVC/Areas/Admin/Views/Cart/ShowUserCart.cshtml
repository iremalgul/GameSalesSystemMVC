@model List<GameSalesSystemMVC.Dtos.CartGameDto>
@{
    ViewBag.Title = "ShowUserCart";
}
@{ decimal cartTotal=0;}
<main>
    <div>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Cart</h6>
            </div>
            <div class="card-body" id="CartGamesTable">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>User</th>
                                <th>Game</th>
                                <th>Amount</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>User</th>
                                <th>Game</th>
                                <th>Amount</th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                cartTotal = item.Cart.TotalCost;
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Cart.User.NameSurname</td>
                                    <td>@item.Game.Title</td>
                                    <td>@item.Game.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <h6 class="m-0 font-weight-bold text-primary">Cart Total : @cartTotal</h6>
                </div>
            </div>
        </div>
    </div>
</main>

