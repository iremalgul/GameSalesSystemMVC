@model List<GameSalesSystemMVC.Dtos.PurchaseGameDto>
@{
    ViewBag.Title = "Details";
}
@{ 
    var total = Model.FirstOrDefault().Purchase.PurchaseAmount;
}
<main>
    <div>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Purchase Detail</h6>
            </div>
            <div class="card-body" id="PurchaseDetailTable">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Purchase Id</th>
                                <th>User</th>
                                <th>Game</th>
                                <th>Game Amount</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Purchase Id</th>
                                <th>User</th>
                                <th>Game</th>
                                <th>Game Amount</th>
                            </tr>
                        </tfoot>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.PurchaseId</td>
                                    <td>@item.Purchase.User.NameSurname</td>
                                    <td>@item.Game.Title</td>
                                    <td><span>&#36;@item.GameAmount</span></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <h6 class="m-0 font-weight-bold text-primary">Cart Total : @total</h6>
                </div>
            </div>
        </div>
    </div>
</main>

